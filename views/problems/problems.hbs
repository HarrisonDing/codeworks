<div class="row clearfix">
  {{#each problems}}
  <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
    <div class="card">
      <div class="header">
        <h2> {{this.title}} </h2>
        <div class="header-dropdown m-r-5">
            <a href="javascript:void(0);" class="btn btn-light"> Try Now! </a>
        </div>
      </div>
      <div class="body">
        <p> {{this.text}} </p>
      </div>
    </div>
  </div>
  {{/each}}
</div>
